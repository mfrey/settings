import EXT
VUSERMAILDIR = `dumpvuser $EXT | grep ^Directory | awk '{ print $2 }'`
SPAMDIR="Spam"
MAXSPAMSCORE="3"

logfile "/home/mfrey/mailfilter.log"

xfilter "/usr/bin/spamc"

if ( /^X-Spam-Level: \*{$MAXSPAMSCORE,}$/)
{
  `test -d $VUSERMAILDIR/.$SPAMDIR/new && exit 1 || exit 0`
  if ( $RETURNCODE == 0 )
  {
     `maildirmake $VUSERMAILDIR/.$SPAMDIR`
  }

  to "$VUSERMAILDIR/.$SPAMDIR/"
}
else
{
  to "$VUSERMAILDIR/"
}


to "$VUSERMAILDIR"
