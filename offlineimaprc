# apparently mutt doesn't want to guess what directory is a mailbox
# and which isn't, so we generate a fragment for mutt
[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

